# Rules

rule proofing
  command = _diffbrowsers proof $fonts -s $styles -o $out -pt $pt_size -ch $
      "$characters" --filter-styles "$filters"

# Build rules
build out/proof/Medium-Light-Light-ExtraLight: proofing
  fonts = $
      "/Users/otta/Documents/GitHub/sutasoma/fonts/ttf/SutasomaModern-ExtraBold.ttf" $
      "/Users/otta/Documents/GitHub/sutasoma/fonts/ttf/SutasomaModerat-Regular.ttf" $
      "/Users/otta/Documents/GitHub/sutasoma/fonts/ttf/SutasomaModerat-Bold.ttf" $
      "/Users/otta/Documents/GitHub/sutasoma/fonts/ttf/SutasomaModern-Medium.ttf" $
      "/Users/otta/Documents/GitHub/sutasoma/fonts/ttf/SutasomaModern-ExtraLight.ttf" $
      "/Users/otta/Documents/GitHub/sutasoma/fonts/ttf/SutasomaModern-Bold.ttf" $
      "/Users/otta/Documents/GitHub/sutasoma/fonts/ttf/SutasomaModern-Regular.ttf" $
      "/Users/otta/Documents/GitHub/sutasoma/fonts/ttf/SutasomaModerat-ExtraBold.ttf" $
      "/Users/otta/Documents/GitHub/sutasoma/fonts/ttf/SutasomaModerat-Medium.ttf" $
      "/Users/otta/Documents/GitHub/sutasoma/fonts/ttf/SutasomaModern-Light.ttf" $
      "/Users/otta/Documents/GitHub/sutasoma/fonts/ttf/SutasomaModerat-Light.ttf" $
      "/Users/otta/Documents/GitHub/sutasoma/fonts/ttf/SutasomaModerat-ExtraLight.ttf"
  styles = instances
  out = out/diffbrowsers
  pt_size = 20
  characters = .*
  filters = Medium|Light|Light|ExtraLight
